# build
alias src='makepkg --source'
alias pkg='makepkg -s'
alias build='sudo extra-i686-build'
alias rpac='rm -rf pkg/ src/'
alias vp='vim PKGBUILD'
alias repgr='cd $OME/ArchGR/i686/ && rm -rf adslgr32.db.tar.gz && repo-add adslgr32.db.tar.gz *.tar.*'

# ssh
alias fosl='ssh -i $HOME/.ssh/foss_rsa axil@fossl'
alias fa='ssh -X -D 50001 -f -C -N axil@foss'
alias cpfosl='scp -i $HOME/.ssh/foss_rsa'
alias cpfos='scp -P 20022 -i $HOME/.ssh/foss_rsa'
alias f='ssh -X -p 20022 -D 50001 -f -C -N -i $HOME/.ssh/foss_rsa axil@foss'
alias fosl='ssh -X -i $HOME/.ssh/foss_rsa axil@fossl'
alias fos='ssh -X -p 20022 -i $HOME/.ssh/foss_rsa axil@foss'
alias sanimal='ssh animal'
alias fosmountl='sshfs axil@fossl:/home/axil/ ~/fossntua/ -o IdentityFile=$HOME/.ssh/foss_rsa'
alias fosmount='sshfs -P 20022 axil@foss:/home/axil/ ~/fossntua/ -o IdentityFile=$HOME/.ssh/foss_rsa'
alias fosumount='sudo fusermount -u ~/fossntua'
alias syncpak='rsync -r -h -P --port=20022 "ssh -i $HOME/.ssh/foss_rsa" axil@foss:~/aur/packages/* ~/aur/foss/'


alias mv='nocorrect mv'                                  # no spelling correction for mv
alias cp='nocorrect cp'                                  # no spelling correction for cp
alias mkdir='nocorrect mkdir'                            # no spelling correction for mkdir

